<h1>All About "Coke"</h1>

<% if flash[:error].present? %>
  <div>
    <%= flash[:error] %>
  </div>
<% end %>

<%= button_to "Fetch more tweets",
  controller: :landing,
  action: :fetch_more_tweets,
  method: :post %>

<div class='tweets-list'>
  <% tweets.each do |tweet| %>
    <p class='tweet-container'>
      handle: <%= tweet.user_handle %><br>
      message: <%= tweet.message %><br>
      sentiment: <%= tweet.sentiment %><br>
      seen: <%= pluralize(tweet.times_seen, 'time') %>
    </p>
  <% end %>
</div>